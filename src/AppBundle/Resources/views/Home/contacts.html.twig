{% block title %}AppBundle:Home:index{% endblock %}

{% block body %}
        <h1>Обратная связь</h1>
    <div class="jumbotron">
        {{ form_start(feedbackForm)}}
            {{ form_row(feedbackForm.name, { 'label': 'Имя', 'attr': {'class': 'form-control'}  }) }}
            {{ form_row(feedbackForm.phone, { 'label': 'Телефон', 'attr': {'class': 'form-control'}  }) }}
