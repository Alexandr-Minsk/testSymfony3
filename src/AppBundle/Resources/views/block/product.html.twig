<div class="row">
    {% for product in products %}
        <div class="category-element col-xs-6 col-lg-3">
            <div class="category-element-container">
                <div class="element-image">
                    <a href="{{ path('catalog') }}/{{ product.categorySlug }}/{{ product.slug }}.html" >
                        <img alt="{{ product.name }}"  src="{{ asset(product.image) }}" >
                    </a>
                </div>
                <h4>
                    <a href="{{ path('catalog') }}/{{ product.categorySlug }}/{{ product.slug }}.html">{{ product.name }}</a>
                </h4>
                <span class="price">{{ product.price }} руб.</span>
            </div>
        </div>
    {% endfor %}
</div>