{% extends 'base.html.twig' %}

{% block body %}
    <h1>Feedbacks list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Message</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedbacks %}
            <tr>
                <td><a href="{{ path('admin_feedback_show', { 'id': feedback.id }) }}">{{ feedback.id }}</a></td>
                <td>{{ feedback.name }}</td>
                <td>{{ feedback.phone }}</td>
                <td>{{ feedback.message }}</td>
                <td>{% if feedback.createdAt %}{{ feedback.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a class="btn btn-success" href="{{ path('admin_feedback_show', { 'id': feedback.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
